<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<config>
	<debugger>
		<showingRuleKeyOnView>true</showingRuleKeyOnView>
	</debugger>
	<dataObserver enable="true">
		<autoResetChangeFlag>true</autoResetChangeFlag>
		<notifyChange>
			<listeners>
				<listener
					class="ch.axonaviy.guidemo.listener.WorkingDateValueChangeListener"
					for="ContextBasedRules.dg.accountHolder.person.workingDay" type="PreRenderView">
					<params>
						<param key="RULE_NAMESPACE" value="BusinessRules.person" />
					</params>
				</listener>
					<listener
					class="ch.axonaviy.guidemo.listener.WorkingDateValueChangeListener"
					for="ContextBasedRules.dg.accountHolder.person.birthDate" type="PreRenderView">
					<params>
						<param key="RULE_NAMESPACE" value="BusinessRules.person" />
					</params>
				</listener>
			</listeners>
		</notifyChange>
	</dataObserver>
</config>